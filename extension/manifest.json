{
  "name": "Jesteer",
  "description": "Imagine a world where tests write themselves",
  "version": "1.0",
  "manifest_version": 3,

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "options_page": "options.html"
}